@{
}

@model IEnumerable<string>

<div class="d-grid">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-primary m-1">Home</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@t" asp-route-pageNum="1"
           class="btn m-1 @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-primary")">@t</a>
    }
</div>